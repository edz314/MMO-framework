-- Define the NPC object
NPC = {
    name = "Guard",  -- NPC's name
    position = {x = 5, y = 5},  -- Current position
    idle_time = 5,  -- Time in seconds that the NPC will idle/wait
}

-- Idle/Wait action function
function idle_wait_action()
    print(NPC.name .. " is idling at position (" .. NPC.position.x .. ", " .. NPC.position.y .. ")")

    -- Simulate idle/wait time
    local start_time = os.time()
    while os.time() - start_time < NPC.idle_time do
        -- The NPC could perform minor animations or look around
        -- Here we just print a message every second
        print(NPC.name .. " is still idling...")
        os.execute("sleep 1")
    end

    print(NPC.name .. " has finished idling and is ready to take action.")
end

-- Example usage:
-- Execute the idle/wait action
idle_wait_action()
